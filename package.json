{
  "name": "splittermond4foundry",
  "version": "0.0.1",
  "description": "Implementation of the Splittermond RPG system for Foundry VTT",
  "main": "src/main.ts",
  "scripts": {
    "prettier:check": "prettier --check \"src/**/!(*.d).ts\" ",
    "prettier:fix": "prettier --write \"src/**/!(*.d).ts\" ",
    "lint": "eslint \"src/**/!(*.d).ts\" ",
    "lint:fix": "eslint --fix \"src/**/!(*.d).ts\" ",
    "test": "mocha",
    "test:coverage": "nyc mocha",
    "clean": "rm -rf \"./build/*\" && rm -rf \"./dist\" && rm -rf \"./coverage\" && rm -rf \"./.nyc_output\" ",
    "clean:json-schema": "rm -f \"./dist/generated.json\" ",
    "build": "webpack",
    "build:sass": "node-sass --output-style compressed \"./styles/\" --output \"./dist/styles/\" ",
    "build:json-schema": "ts-json-schema-generator --tsconfig \"./tsconfig.schema-generation.json\" --path \"./src/model/entities/**/*.ts\" --out \"./dist/generated.json\"",
    "build:template.json": "node \"tools/generateTemplateJson.js\" \"./dist/generated.json\" \"./dist/template.json\"",
    "build:packs": "node \"tools/copy.js\" \"./packs\" \"./dist/packs\"",
    "build:system.json": "node \"tools/generateSystemJson.js\" \"./dist/system.json\"",
    "build:html": "node \"tools/copy.js\" \"./templates\" \"./dist/templates\"",
    "build:langs": "node \"tools/copy.js\" \"./lang\" \"./dist/lang\"",
    "build:assets": "node \"tools/copy.js\" \"./assets\" \"./dist/assets\" ",
    "build:prod": "npm run clean && npm run lint:fix && npm run build && npm run build:langs && npm run build:sass && npm run build:packs && npm run build:html && npm run build:json-schema && npm run build:template.json && npm run clean:json-schema && npm run build:system.json",
    "build:release": "npm run build:prod && node \"tools/generateRelease.js\" ",
    "build:deploy": "npm run build:prod && node \"tools/deploy.js\" "
  },
  "author": "Naresea",
  "license": "MIT",
  "devDependencies": {
    "@types/chai": "^4.2.12",
    "@types/handlebars": "^4.1.0",
    "@types/jquery": "^3.5.1",
    "@types/mocha": "^8.0.3",
    "@types/node": "^14.11.1",
    "@typescript-eslint/eslint-plugin": "^4.0.1",
    "@typescript-eslint/parser": "^4.0.1",
    "adm-zip": "^0.4.16",
    "bootstrap-scss": "^4.5.2",
    "chai": "^4.2.0",
    "dotenv": "^8.2.0",
    "eslint": "^7.8.1",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "foundry-pc-types": "gitlab:foundry-projects/foundry-pc/foundry-pc-types",
    "ini": "^1.3.5",
    "mocha": "^8.1.3",
    "ncp": "^2.0.0",
    "node-sass": "^4.14.1",
    "normalize-scss": "^7.0.1",
    "nyc": "^15.1.0",
    "prettier": "^2.1.1",
    "ts-json-schema-generator": "^0.73.0",
    "ts-loader": "^8.0.3",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.2",
    "webpack": "^4.44.1",
    "webpack-cli": "^3.3.12"
  }
}
