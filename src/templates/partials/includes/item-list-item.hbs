<div class="d-flex align-items-center item-list__item">
    {{#each fields}}
        <div class="list-item__element flex-grow" style="min-width: 0;">
            <span style="display: block; overflow: hidden; white-space: nowrap; text-overflow: ellipsis">{{localize this}}</span>
        </div>
    {{/each}}
    <div class="d-flex flex-grow list-item__element align-items-center list-item__end" style="justify-content: flex-end">
        {{#>icons-end}}
            <i class="fas fa-edit edit-item clickable" data-index="{{index}}"></i>
            <i class="fas fa-trash delete-item clickable" data-index="{{index}}"></i>
        {{/icons-end}}
    </div>
</div>
