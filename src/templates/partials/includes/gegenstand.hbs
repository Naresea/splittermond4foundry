{{#> systems/splittermond/templates/partials/layouts/layout-item.hbs class="rasse-sheet" hasPortrait=true}}
    {{#*inline "item-header"}}
        <h1 class="charname flex-grow" style="border: none;"><input name="name" type="text" value="{{item.name}}"/></h1>
    {{/inline}}
    {{#*inline "nav-tabs"}}
        <a class="item control-height" data-tab="description">Beschreibung</a>
        <a class="item control-height" data-tab="details">Details</a>
        {{#>extra-tabs}}{{/extra-tabs}}
    {{/inline}}
    {{#*inline "nav-content"}}
        <div class="tab" style="height: 100%;" data-group="primary" data-tab="description">
            {{#> systems/splittermond/templates/partials/includes/editor.hbs target="data.beschreibung" content=data.beschreibung}}
            {{/systems/splittermond/templates/partials/includes/editor.hbs}}
        </div>
        <div class="tab" data-group="primary" data-tab="details">
            <div class="d-flex flex-col flex-grow">
                <div class="d-flex align-items-center m-small">
                    <label class="col-4" for="data.wertInTellaren">Wert in Tellaren:</label>
                    <input class="col-6" type="number" name="data.wertInTellaren" value="{{data.wertInTellaren}}"/>
                </div>
                <div class="d-flex align-items-center m-small">
                    <label class="col-4" for="data.gewicht">Gewicht:</label>
                    <input class="col-6" type="number" name="data.gewicht" value="{{data.gewicht}}"/>
                </div>
                <div class="d-flex align-items-center m-small">
                    <label class="col-4" for="data.anzahl">Anzahl:</label>
                    <input class="col-6" type="number" name="data.anzahl" value="{{data.anzahl}}"/>
                </div>
            </div>
        </div>
        {{#>extra-tabs-content}}{{/extra-tabs-content}}
    {{/inline}}
{{/systems/splittermond/templates/partials/layouts/layout-item.hbs}}
