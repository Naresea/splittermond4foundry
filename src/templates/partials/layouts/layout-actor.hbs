<form class="splimo-actor-sheet sheet p-small {{class}}" autocomplete="off">
    <div class="d-flex flex-col flex-no-grow">
        <header class="d-flex flex-row flex-no-grow header">
            {{#> systems/splittermond/templates/partials/includes/portrait.hbs}}
                {{#*inline "portrait-image"}}
                    <img class="profile-img" src="{{actor.img}}" data-edit="img" title="{{actor.name}}" width="200"/>
                {{/inline}}
            {{/systems/splittermond/templates/partials/includes/portrait.hbs}}
            {{#> header-content}}{{/header-content}}
        </header>
    </div>

    <div class="d-flex flex-row flex-grow overflow-hidden">
        <div class="d-flex flex-col navbar sheet-tabs tabs" data-group="primary">
            <div class="navbar-wrapper">
                {{#> nav-tabs}}{{/nav-tabs}}
            </div>
        </div>
        {{!-- Sheet Body --}}
        <section class="sheet-body p-big overflow-hidden" style="width: 100%; height: 100%; padding-bottom: 7%; padding-right: 7%;">
            {{#> nav-content}}{{/nav-content}}
        </section>
    </div>
</form>
