<div class="splittermond">
    <div class="d-flex flex-col flex-grow" style="width: 100%; height: 100%;">
        <div class="align-items-center" style="min-height: var(--control-size); max-height: var(--control-size); font-weight: bold;">
            {{name}}
        </div>
        {{#if critSuccess}}
            <div class="align-items-center" style="min-height: var(--control-size); max-height: var(--control-size); font-weight: bold; color: green">
                {{localize "splittermond.rollresult.critsuccess"}}
            </div>
        {{/if}}
        {{#if critFail}}
            <div class="align-items-center" style="min-height: var(--control-size); max-height: var(--control-size); font-weight: bold; color: red">
                {{localize "splittermond.rollresult.critfail"}}
            </div>
        {{/if}}
        {{{roll}}}
        {{#if explanation}}
            <div class="d-flex flex-col explanation-label">
                <label class="d-flex align-items-center clickable" style="min-height: var(--control-size);">{{localize "splittermond.rollresult.explain"}}</label>
                <p class="explanation-text" style="border: 1px solid black; padding: 5px; border-radius: 5px;">{{explanation}}</p>
            </div>
        {{/if}}
        {{#if ticksExplanation}}
            <div class="d-flex flex-col  tick-explanation-label">
                <label class="d-flex align-items-center clickable" style="min-height: var(--control-size);">{{localize "splittermond.rollresult.ticksExplanation"}}</label>
                <p class="tick-explanation-text" style="border: 1px solid black; padding: 5px; border-radius: 5px;">{{ticksExplanation}}</p>
            </div>
        {{/if}}
        {{#if maneuver}}
            <div class="d-flex flex-col">
                <label class="d-flex align-items-center" style="min-height: var(--control-size);">
                    <div class="col-6">{{localize "splittermond.rollresult.maneuverEg"}}</div>
                    <div class="col-4">{{maneuver.egCost}}</div>
                </label>
                <p style="border: 1px solid black; padding: 5px; border-radius: 5px;">{{maneuver.effekt}}</p>
            </div>
        {{/if}}
        {{#if erfolgsgrade}}
            <div class="d-flex flex-col">
                <label class="d-flex align-items-center" style="min-height: var(--control-size);">
                    <div class="col-6">{{localize "splittermond.rollresult.erfolgsgrade"}}</div>
                    <div class="col-4">{{erfolgsgrade}}</div>
                </label>
            </div>
        {{/if}}
        <div class="d-flex align-items-center" style="min-height: var(--control-size); max-height: var(--control-size); justify-content: space-evenly">
            {{#if ticks}}
                <button class="flex-grow clickable tick-button" data-splimo-btn-data="{{ticks}}" data-splimo-actor-id="{{actor.data._id}}" style="background: lightgrey; min-width: 0;">
                    <span style="display: block; overflow: hidden; white-space: nowrap; text-overflow: ellipsis">
                        {{localize "splittermond.rollresult.addTicks"}}
                    </span>
                </button>
            {{/if}}
            {{#if damage}}
                <button class="flex-grow clickable damage-button" data-splimo-btn-data="{{damage}}" style="background: lightgrey; min-width: 0;">
                    <span style="display: block; overflow: hidden; white-space: nowrap; text-overflow: ellipsis">
                        {{localize "splittermond.rollresult.damage"}}
                    </span>
                </button>
            {{/if}}
            {{#if fokusCost}}
                <button class="flex-grow clickable fokus-button" data-splimo-btn-data="{{fokusCost}}" data-splimo-actor-id="{{actor.data._id}}" style="background: lightgrey; min-width: 0;">
                    <span style="display: block; overflow: hidden; white-space: nowrap; text-overflow: ellipsis">
                        {{localize "splittermond.rollresult.fokusCost"}}
                    </span>
                </button>
            {{/if}}
        </div>
    </div>
</div>
