<div class="attributes d-flex flex-row flex-grow overflow-hidden">
    <div class="d-flex flex-col flex-grow p-small overflow-hidden">
        <div class="d-flex flex-row align-items-center m-small">
            <div class="col-4 p-small">{{localize "splittermond.attributes.header.attribute"}}</div>
            <div class="col-2" style="text-align: center; margin-right: 5px">{{localize "splittermond.attributes.header.wert"}}</div>
            <div class="col-1" style="text-align: center; margin-right: 5px">{{localize "splittermond.attributes.header.start"}}</div>
            <div class="col-1" style="text-align: center; margin-right: 5px">{{localize "splittermond.attributes.header.increase"}}</div>
            <div class="col-2" style="text-align: center;">{{localize "splittermond.attributes.header.mod"}}</div>
        </div>
        {{#each (attrNames base=true)}}
            <div class="d-flex flex-row align-items-center m-small">
                <label class="col-4" for="data.{{this}}">{{localize (concat "splittermond.attribute." this)}}</label>
                <div class="col-2" style="text-align: center; margin-right: 5px;">{{getByKey (getByKey../data.attributes this) "total"}}</div>
                <input class="col-1" style="text-align: center; margin-right: 5px" type="number" name="data.{{this}}" value="{{getByKey ../data this}}"/>
                <input class="col-1" style="text-align: center; margin-right: 5px" type="number" name="data.inc{{this}}" value="{{getByKey ../data (concat "inc" this)}}"/>
                <div class="col-2" style="text-align: center;">{{getByKey (getByKey ../data.attributes this) "modifier"}}</div>
            </div>
        {{/each}}
    </div>
    {{#> systems/splittermond/templates/partials/includes/separator-vertical.hbs}}
    {{/systems/splittermond/templates/partials/includes/separator-vertical.hbs}}
    <div class="d-flex flex-col flex-grow p-small overflow-hidden">
        <div class="d-flex flex-row align-items-center m-small">
            <div class="col-4 p-small">{{localize "splittermond.attributes.header.derivedAttribute"}}</div>
            <div class="col-2 p-small" style="text-align: center">{{localize "splittermond.attributes.header.wert"}}</div>
            <div class="col-2 p-small" style="text-align: center">{{localize "splittermond.attributes.header.mod"}}</div>
            <div class="col-2 p-small"></div>
        </div>
        {{#each (attrNames base=false derived=true)}}
            <div class="d-flex flex-row align-items-center m-small">
                <label class="col-4 p-small" for="data.{{this}}">{{localize (concat "splittermond.attribute." this)}}</label>
                <div class="col-2 p-small" style="text-align: center">{{getByKey (getByKey ../data.derivedAttributes this) "total"}}</div>
                <div class="col-2 p-small" style="text-align: center">{{getByKey (getByKey ../data.derivedAttributes this) "modifier"}}</div>
                {{#if (eq this "INI")}}
                    <i class="fas fa-dice-d20 clickable" data-operation="iniRoll" data-roll="{{getByKey (getByKey ../data.derivedAttributes this) "total"}}" data-click-id="{{id}}"></i>
                {{/if}}
            </div>
        {{/each}}
    </div>
</div>
