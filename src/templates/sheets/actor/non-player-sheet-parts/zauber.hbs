<div class="zauber d-flex flex-col flex-grow overflow-hidden">
    {{#> systems/splittermond/templates/partials/includes/item-list.hbs class="zauber-list" dynamic=true item=data.zauber.tableData fields=data.zauber.tableFields}}
        {{#*inline "icons-end"}}
            <i class="fas fa-plus clickable" data-operation="add" data-type="zauber"></i>
        {{/inline}}
        {{#*inline "item-template"}}
            {{#> systems/splittermond/templates/partials/includes/item-list-item.hbs fields=fields index=@index}}
                {{#*inline "icons-end"}}
                    {{#if (isNotNull roll)}}
                        <i class="fas fa-dice-d20 clickable" data-operation="roll" data-roll="{{roll}}" data-click-id="{{id}}"></i>
                    {{/if}}
                    <i class="fas fa-edit clickable" data-operation="edit" data-type="zauber" data-click-id="{{id}}"></i>
                    <i class="fas fa-trash clickable" data-operation="delete" data-type="zauber" data-click-id="{{id}}"></i>
                {{/inline}}
            {{/systems/splittermond/templates/partials/includes/item-list-item.hbs}}
        {{/inline}}
    {{/systems/splittermond/templates/partials/includes/item-list.hbs}}
</div>
