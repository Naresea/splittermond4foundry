<form class="item-sheet sheet p-small {{class}}" style="overflow: auto" autocomplete="off">
    <div class="d-flex flex-col flex-grow" style="max-width: 100%; max-height: 100%; overflow: hidden;">
        <h1 class="m-big">{{localize "splittermond.chargen-select-many.title"}}</h1>
        <div class="d-flex align-items-center m-small">
            {{localize "splittermond.chargen-select-many.remaining"}} {{remaining}} / {{numN}}
        </div>
        {{#each options}}
            <div class="d-flex align-items-center m-small">
                <div class="col-6">{{label}}</div>
                <input class="col-4" type="checkbox" name="option.{{@index}}" {{checked (oneOf @index ../selectedIndices)}}/>
            </div>
        {{/each}}

        {{#if canSubmit}}
            <button class="btn-submit clickable m-small">{{localize "splittermond.chargen-select-many.ok"}}</button>
        {{/if}}
    </div>
</form>
