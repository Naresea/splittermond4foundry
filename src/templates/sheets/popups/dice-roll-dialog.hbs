<form class="item-sheet sheet p-small {{class}}" autocomplete="off">
    <div class="d-flex flex-col flex-grow" style="max-width: 100%; max-height: 100%; overflow: hidden;">
        <h1>{{localize "splittermond.diceroll.title"}}</h1>
        <div class="d-flex align-items-center">
            <label class="col-4" for="data.modifier">{{localize "splittermond.diceroll.modifier"}}</label>
            <input class="col-6" name="data.modifier" type="number" value="{{data.modifier}}"/>
        </div>
        <p class="d-flex">
            {{#print content=(localize "splittermond.diceroll.shortcuts")}}{{/print}}
        </p>
        <div class="d-flex align-items-center">
            <button class="flex-grow clickable" data-diceroll-submit="sicherheit">{{localize "splittermond.diceroll.sicherheitswurf"}}</button>
            <button class="flex-grow clickable" data-diceroll-submit="standard">{{localize "splittermond.diceroll.standard"}}</button>
            <button class="flex-grow clickable" data-diceroll-submit="risiko">{{localize "splittermond.diceroll.risiko"}}</button>
        </div>
    </div>
</form>
