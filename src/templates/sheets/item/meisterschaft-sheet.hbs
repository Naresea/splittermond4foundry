{{#> systems/splittermond/templates/partials/layouts/layout-item.hbs class="meisterschaft-sheet" hasPortrait=true}}
    {{#*inline "item-header"}}
        <h1 class="charname flex-grow" style="border: none;"><input name="name" type="text" value="{{item.name}}"/></h1>
    {{/inline}}
    {{#*inline "nav-tabs"}}
        <a class="item control-height" data-tab="description">{{localize "splittermond.item.nav.description"}}</a>
        <a class="item control-height" data-tab="details">{{localize "splittermond.item.nav.details"}}</a>
    {{/inline}}
    {{#*inline "nav-content"}}
        <div class="tab" style="height: 100%;" data-group="primary" data-tab="description">
            {{#> systems/splittermond/templates/partials/includes/editor.hbs target="data.beschreibung" content=data.beschreibung}}
            {{/systems/splittermond/templates/partials/includes/editor.hbs}}
        </div>
        <div class="tab" data-group="primary" data-tab="details">
            <div class="d-flex flex-col flex-grow">
                <div class="d-flex align-items-center m-small">
                    <label class="col-4" for="data.fertigkeit">{{localize "splittermond.meisterschaft.fertigkeit"}}</label>
                    <input class="col-6" type="text" name="data.fertigkeit" value="{{data.fertigkeit}}"/>
                </div>
                <div class="d-flex align-items-center m-small">
                    <label class="col-4" for="data.isManeuver">{{localize "splittermond.meisterschaft.isManeuver"}}</label>
                    <input class="col-6" type="checkbox" name="data.isManeuver" {{checked data.isManeuver}}/>
                </div>
                {{#if data.isManeuver}}
                    <div class="d-flex align-items-center m-small">
                        <label class="col-4" for="data.egCost">{{localize "splittermond.meisterschaft.egCost"}}</label>
                        <input class="col-6" type="number" name="data.egCost" value="{{data.egCost}}"/>
                    </div>
                    <div class="d-flex align-items-center m-small">
                        <label class="col-4" for="data.maneuverEffekt">{{localize "splittermond.meisterschaft.maneuverEffekt"}}</label>
                        <input class="col-6" type="text" name="data.maneuverEffekt" value="{{data.maneuverEffekt}}"/>
                    </div>
                {{/if}}
                {{#> systems/splittermond/templates/partials/includes/item-list.hbs class="meisterschaft-modifier" dynamic=true item=data.modifier fields=(modifierTableHeaders)}}
                {{/systems/splittermond/templates/partials/includes/item-list.hbs}}
            </div>
        </div>
    {{/inline}}
{{/systems/splittermond/templates/partials/layouts/layout-item.hbs}}
