{{#> systems/splittermond/templates/partials/layouts/layout-item.hbs class="rasse-sheet" hasPortrait=true}}
    {{#*inline "item-header"}}
        <h1 class="charname flex-grow" style="border: none;"><input name="name" type="text" value="{{item.name}}"/></h1>
    {{/inline}}
    {{#*inline "nav-tabs"}}
        <a class="item control-height" data-tab="description">{{localize "splittermond.item.nav.description"}}</a>
        <a class="item control-height" data-tab="details">{{localize "splittermond.item.nav.details"}}</a>
    {{/inline}}
    {{#*inline "nav-content"}}
        <div class="tab" style="height: 100%;" data-group="primary" data-tab="description">
            {{#> systems/splittermond/templates/partials/includes/editor.hbs target="data.beschreibung" content=data.beschreibung}}
            {{/systems/splittermond/templates/partials/includes/editor.hbs}}
        </div>
        <div class="tab" data-group="primary" data-tab="details">
            <div class="d-flex flex-col flex-grow">
                <div class="d-flex align-items-center m-small">
                    <label class="col-4" for="data.attributEins">{{localize "splittermond.fertigkeit.type.label"}}</label>
                    <div class="d-flex col-6">
                        {{#> systems/splittermond/templates/partials/includes/dropdown.hbs
                                name="data.type"
                                selected=data.type
                                labels=(prefix "splittermond.fertigkeit.type." (asList "allgemein" "kampf" "magie"))
                                values=(asList "allgemein" "kampf" "magie")
                        }}
                        {{/systems/splittermond/templates/partials/includes/dropdown.hbs}}
                    </div>
                </div>
                <div class="d-flex align-items-center m-small">
                    <label class="col-4" for="data.punkte">{{localize "splittermond.fertigkeit.punkte"}}</label>
                    <input class="col-6" type="number" name="data.punkte" value="{{data.punkte}}"/>
                </div>
                <div class="d-flex align-items-center m-small">
                    <label class="col-4" for="data.mod">{{localize "splittermond.fertigkeit.mod"}}</label>
                    <input class="col-6" type="number" name="data.mod" value="{{data.mod}}"/>
                </div>
                {{#unless (eq data.type "kampf")}}
                    <div class="d-flex align-items-center m-small">
                        <label class="col-4" for="data.attributEins">{{localize "splittermond.fertigkeit.attributEins"}}</label>
                        <div class="d-flex col-6">
                            {{#> systems/splittermond/templates/partials/includes/dropdown.hbs
                                    name="data.attributEins"
                                    selected=data.attributEins
                                    labels=(prefix "splittermond.attribute." (attrNames base=true derived=true includeGK=true))
                                    values=(attrNames base=true derived=true includeGK=true)
                            }}
                            {{/systems/splittermond/templates/partials/includes/dropdown.hbs}}
                        </div>
                    </div>
                    <div class="d-flex align-items-center m-small">
                        <label class="col-4" for="data.attributZwei">{{localize "splittermond.fertigkeit.attributZwei"}}</label>
                        <div class="d-flex col-6">
                            {{#> systems/splittermond/templates/partials/includes/dropdown.hbs
                                    name="data.attributZwei"
                                    selected=data.attributZwei
                                    labels=(prefix "splittermond.attribute." (attrNames base=true derived=true includeGK=true))
                                    values=(attrNames base=true derived=true includeGK=true)
                            }}
                            {{/systems/splittermond/templates/partials/includes/dropdown.hbs}}
                        </div>
                    </div>
                {{/unless}}
            </div>
        </div>
    {{/inline}}
{{/systems/splittermond/templates/partials/layouts/layout-item.hbs}}
