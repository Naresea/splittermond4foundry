{{#> systems/splittermond/templates/partials/layouts/layout-item.hbs class="mondzeichen-sheet" hasPortrait=true}}
    {{#*inline "item-header"}}
        <h1 class="charname flex-grow" style="border: none;"><input name="name" type="text" value="{{item.name}}"/></h1>
    {{/inline}}
    {{#*inline "nav-tabs"}}
        <a class="item control-height" data-tab="description">{{localize "splittermond.item.nav.description"}}</a>
        <a class="item control-height" data-tab="details">{{localize "splittermond.item.nav.details"}}</a>
    {{/inline}}
    {{#*inline "nav-content"}}
        <div class="tab" style="height: 100%;" data-group="primary" data-tab="description">
            {{#> systems/splittermond/templates/partials/includes/editor.hbs target="data.beschreibung" content=data.beschreibung}}
            {{/systems/splittermond/templates/partials/includes/editor.hbs}}
        </div>
        <div class="tab" data-group="primary" data-tab="details">
            <div class="d-flex flex-col flex-grow">
                <div class="d-flex align-items-center m-small">
                    <label class="col-4" for="data.grad">{{localize "splittermond.mondzeichen.grad"}}</label>
                    <input class="col-6" type="number" name="data.grad" value="{{data.grad}}"/>
                </div>
                <div class="d-flex align-items-center m-small">
                    <label class="col-4" for="data.effektEins">{{localize "splittermond.mondzeichen.effektEins"}}</label>
                    <input class="col-6" type="text" name="data.effektEins" value="{{data.effektEins}}"/>
                </div>
                <div class="d-flex align-items-center m-small">
                    <label class="col-4" for="data.effektZwei">{{localize "splittermond.mondzeichen.effektZwei"}}</label>
                    <input class="col-6" type="text" name="data.effektZwei" value="{{data.effektZwei}}"/>
                </div>
                <div class="d-flex align-items-center m-small">
                    <label class="col-4" for="data.effektDrei">{{localize "splittermond.mondzeichen.effektDrei"}}</label>
                    <input class="col-6" type="text" name="data.effektDrei" value="{{data.effektDrei}}"/>
                </div>
                <div class="d-flex align-items-center m-small">
                    <label class="col-4" for="data.effektVier">{{localize "splittermond.mondzeichen.effektVier"}}</label>
                    <input class="col-6" type="text" name="data.effektVier" value="{{data.effektVier}}"/>
                </div>
            </div>
        </div>
    {{/inline}}
{{/systems/splittermond/templates/partials/layouts/layout-item.hbs}}
