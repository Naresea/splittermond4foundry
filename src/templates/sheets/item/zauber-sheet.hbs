{{#> systems/splittermond/templates/partials/layouts/layout-item.hbs class="zauber-sheet" hasPortrait=true}}
    {{#*inline "item-header"}}
        <h1 class="charname flex-grow" style="border: none;"><input name="name" type="text" value="{{item.name}}"/></h1>
    {{/inline}}
    {{#*inline "nav-tabs"}}
        <a class="item control-height" data-tab="description">Beschreibung</a>
        <a class="item control-height" data-tab="details">Details</a>
    {{/inline}}
    {{#*inline "nav-content"}}
        <div class="tab" style="height: 100%;" data-group="primary" data-tab="description">
            {{#> systems/splittermond/templates/partials/includes/editor.hbs target="data.beschreibung" content=data.beschreibung}}
            {{/systems/splittermond/templates/partials/includes/editor.hbs}}
        </div>
        <div class="tab" data-group="primary" data-tab="details">
            <div class="d-flex flex-col flex-grow">
                <div class="d-flex align-items-center m-small">
                    <label class="col-4" for="data.grad">Grad:</label>
                    <input class="col-6" type="number" name="data.grad" value="{{data.grad}}"/>
                </div>
                <div class="d-flex align-items-center m-small">
                    <label class="col-4" for="data.fertigkeit">Fertigkeit:</label>
                    <input class="col-6" type="text" name="data.fertigkeit" value="{{data.fertigkeit}}"/>
                </div>
                <div class="d-flex align-items-center m-small">
                    <label class="col-4" for="data.schwierigkeit">Schwierigkeit:</label>
                    <input class="col-6" type="text" name="data.schwierigkeit" value="{{data.parsed.schwierigkeit}}"/>
                </div>
                <div class="d-flex align-items-center m-small">
                    <label class="col-4" for="data.fokus">Fokus:</label>
                    <input class="col-6" type="text" name="data.fokus" value="{{data.parsed.fokus}}"/>
                </div>
                <div class="d-flex align-items-center m-small">
                    <label class="col-4" for="data.ticks">Zauberdauer:</label>
                    <input class="col-6" type="text" name="data.zauberdauer" value="{{data.parsed.zauberdauer}}"/>
                </div>
                <div class="d-flex align-items-center m-small">
                    <label class="col-4" for="data.reichweite">Reichweite (Meter):</label>
                    <input class="col-6" type="text" name="data.reichweite" value="{{data.parsed.reichweite}}"/>
                </div>
                <div class="d-flex align-items-center m-small">
                    <label class="col-4" for="data.wirkungsdauer">Wirkungsdauer (Ticks):</label>
                    <input class="col-6" type="number" name="data.wirkungsdauer" value="{{data.wirkungsdauer}}"/>
                </div>
                <div class="d-flex align-items-center m-small">
                    <label class="col-4" for="data.verstaerkung">VerstÃ¤rken:</label>
                    <input class="col-6" type="text" name="data.verstaerkung" value="{{data.verstaerkung}}"/>
                </div>
            </div>
        </div>
    {{/inline}}
{{/systems/splittermond/templates/partials/layouts/layout-item.hbs}}
