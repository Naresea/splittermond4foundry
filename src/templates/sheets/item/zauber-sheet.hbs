{{#> systems/splittermond/templates/partials/layouts/layout-item.hbs class="zauber-sheet" hasPortrait=true}}
    {{#*inline "item-header"}}
        <h1 class="charname flex-grow" style="border: none;"><input name="name" type="text" value="{{item.name}}"/></h1>
    {{/inline}}
    {{#*inline "nav-tabs"}}
        <a class="item control-height" data-tab="description">{{localize "splittermond.item.nav.description"}}</a>
        <a class="item control-height" data-tab="details">{{localize "splittermond.item.nav.details"}}</a>
    {{/inline}}
    {{#*inline "nav-content"}}
        <div class="tab" style="height: 100%;" data-group="primary" data-tab="description">
            {{#> systems/splittermond/templates/partials/includes/editor.hbs target="data.beschreibung" content=data.beschreibung}}
            {{/systems/splittermond/templates/partials/includes/editor.hbs}}
        </div>
        <div class="tab" data-group="primary" data-tab="details">
            <div class="d-flex flex-col flex-grow">
                <div class="d-flex align-items-center m-small">
                    <label class="col-4" for="data.grad">{{localize "splittermond.zauber.grad"}}</label>
                    <input class="col-6" type="number" name="data.grad" value="{{data.grad}}"/>
                </div>
                <div class="d-flex align-items-center m-small">
                    <label class="col-4" for="data.fertigkeit">{{localize "splittermond.zauber.fertigkeit"}}</label>
                    <input class="col-6" type="text" name="data.fertigkeit" value="{{data.fertigkeit}}"/>
                </div>
                <div class="d-flex align-items-center m-small">
                    <label class="col-4" for="data.schwierigkeitString">{{localize "splittermond.zauber.schwierigkeit"}}</label>
                    <input class="col-6" type="text" name="data.schwierigkeitString" value="{{data.schwierigkeitString}}"/>
                </div>
                <div class="d-flex align-items-center m-small">
                    <label class="col-4" for="data.fokus">{{localize "splittermond.zauber.fokus"}}</label>
                    <input class="col-6" type="text" name="data.fokus" value="{{data.parsed.fokus}}"/>
                </div>
                <div class="d-flex align-items-center m-small">
                    <label class="col-4" for="data.zauberdauerString">{{localize "splittermond.zauber.zauberdauer"}}</label>
                    <input class="col-6" type="text" name="data.zauberdauerString" value="{{data.zauberdauerString}}"/>
                </div>
                <div class="d-flex align-items-center m-small">
                    <label class="col-4" for="data.reichweiteString">{{localize "splittermond.zauber.reichweite"}}</label>
                    <input class="col-6" type="text" name="data.reichweiteString" value="{{data.reichweiteString}}"/>
                </div>
                <div class="d-flex align-items-center m-small">
                    <label class="col-4" for="data.wirkungsdauerString">{{localize "splittermond.zauber.wirkungsdauer"}}</label>
                    <input class="col-6" type="number" name="data.wirkungsdauerString" value="{{data.wirkungsdauerString}}"/>
                </div>
                <div class="d-flex align-items-center m-small">
                    <label class="col-4" for="data.bereichString">{{localize "splittermond.zauber.bereich"}}</label>
                    <input class="col-6" type="text" name="data.bereichString" value="{{data.bereichString}}"/>
                </div>
                <div class="d-flex align-items-center m-small">
                    <label class="col-4" for="data.verstaerkung">{{localize "splittermond.zauber.verstaerkung"}}</label>
                    <input class="col-6" type="text" name="data.verstaerkung" value="{{data.verstaerkung}}"/>
                </div>
            </div>
        </div>
    {{/inline}}
{{/systems/splittermond/templates/partials/layouts/layout-item.hbs}}
